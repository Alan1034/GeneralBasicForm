{
  "include": ["index.d.ts", "src/**/*", "src/**/*.tsx", "public/*", "./src"],
  "exclude": [],
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "strict": false,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "module": "commonjs",
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": true,
    // "allowJs": true,
    "jsx": "react-jsx",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
